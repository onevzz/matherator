<%= form_with(model: flashcard) do |form| %>
  <% if flashcard.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(flashcard.errors.count, "error") %> prohibited this flashcard from being saved:</h2>

      <ul>
        <% flashcard.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :code, style: "display: block" %>
    <%= form.text_field :code, class:"form-control" %>
  </div>

  <div>
    <%= form.label :question, style: "display: block" %>
    <%= form.text_area :question, class:"form-control", :rows=>2 %>
  </div>

  <div>
    <%= form.label :answer, style: "display: block" %>
    <%= form.text_field :answer, class:"form-control" %>
  </div>

  <div>
    <%= form.label :unit, style: "display: block" %>
    <%= form.text_field :unit, class:"form-control" %>
  </div>

  <div>
    <%= form.number_field :user_id, class:"form-control", value:current_user.id, :id => :flashcard_user_id, :type => :hidden %>
  </div></br>

  <div>
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
